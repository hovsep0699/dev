{
  "name": "root",
  "private": true,
  "workspaces": {
    "packages": [
      "packages/*"
    ],
    "nohoist": [
      "packages/**/webpack-dev-server",
      "packages/**/babel-eslint",
      "**/babel-loader",
      "**/babel-jest",
      "**/jest"
    ]
  },
  "scripts": {
    "serve": "serve -s build/distate",
    "start": "yarn build:dependencies && cross-env FORCE_COLOR=true lerna run --parallel start",
    "start:tektorg": "yarn build:dependencies && concurrently \"lerna run --ignore=@distate/app --stream start\" \"FORCE_COLOR=true lerna run --stream --scope=@distate/app start:tektorg\"",
    "build": "yarn build:dependencies && yarn build:app",
    "build:app": "cross-env FORCE_COLOR=true lerna run --scope=@distate/app build && yarn build:app-ackom",
    "build:app-diac": "cross-env FORCE_COLOR=true lerna run --scope=@distate/app build:diac",
    "build:app-ackom": "cross-env lerna run --scope=@distate/app build:ackom",
    "build:app-tektorg": "cross-env FORCE_COLOR=true lerna run --scope=@distate/app build:tektorg",
    "build:dependencies": "yarn clean && cross-env FORCE_COLOR=true lerna run --scope=@distate/components --scope=@distate/core build",
    "build:local": "yarn build && node scripts/uploadToLegacy.js",
    "clean": "lerna run --scope=@distate/components --scope=@distate/core --parallel clean",
    "clean:dependencies": "lerna clean -y",
    "test": "cross-env CI=true FORCE_COLOR=true lerna run test -- --coverage",
    "lint": "cross-env CI=true FORCE_COLOR=true lerna run lint --no-bail",
    "storybook": "yarn workspace @distate/components storybook",
    "analyze": "source-map-explorer 'build/distate/static/js/*.js'"
  },
  "devDependencies": {
    "@babel/plugin-proposal-class-properties": "^7.8.3",
    "@types/classnames": "^2.2.10",
    "@types/jest": "^25.2.1",
    "@types/node": "^13.11.0",
    "@types/react": "^16.9.32",
    "@types/react-datepicker": "^2.11.0",
    "@types/react-dom": "^16.9.6",
    "@types/react-redux": "^7.1.7",
    "@types/react-router-dom": "^5.1.3",
    "@types/styled-components": "^5.0.1",
    "@types/throttle-debounce": "^2.1.0",
    "@types/yup": "^0.26.34",
    "@typescript-eslint/eslint-plugin": "^2.19.0",
    "@typescript-eslint/parser": "^2.19.0",
    "babel-eslint": "10.0.3",
    "babel-plugin-styled-components": "^1.10.7",
    "concurrently": "^5.1.0",
    "cross-env": "^7.0.3",
    "eslint": "^6.8.0",
    "eslint-config-airbnb": "^18.2.0",
    "eslint-config-prettier": "^6.10.0",
    "eslint-config-react-app": "^5.2.0",
    "eslint-plugin-flowtype": "^4.6.0",
    "eslint-plugin-import": "^2.20.1",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-prettier": "^3.1.2",
    "eslint-plugin-react": "^7.18.3",
    "eslint-plugin-react-hooks": "^2.3.0",
    "fs-extra": "^8.1.0",
    "husky": "^4.2.3",
    "lerna": "^3.19.0",
    "prettier": "^1.19.1",
    "rimraf": "^3.0.1",
    "source-map-explorer": "^2.2.2",
    "typescript": "^3.7.3"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "husky": {
    "hooks": {
      "prepare-commit-msg": "scripts/prepare-commit-msg.sh $HUSKY_GIT_PARAMS"
    }
  },
  "dependencies": {
    "@types/lodash.set": "^4.3.6",
    "lodash.set": "^4.3.2",
    "react-quill": "^1.3.5",
    "serve": "^14.2.4"
  }
}
