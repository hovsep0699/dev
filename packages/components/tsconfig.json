{
  "extends": "../../tsconfig.base.json",
  "include": ["./src"],
  "exclude": ["**/*.spec.*"],
  "compilerOptions": {
    "composite": true,
    "rootDir": "src",
    "outDir": "dist",
    "jsx": "react",
    "skipLibCheck": true,
    "noStrictGenericChecks": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "isolatedModules": false,
    "strictNullChecks": false
  }
}
